<div class="container d-flex flex-column align-items-center ">
    <ul class="list-unstyled w-auto" > 
        <% for(var i=0; i<posts.length; i++) {%>
            
            <li class="mt-4 ">
                <a href="/post/<%= posts[i]._id%>" class="text-decoration-none">
                <div class="card row justify-content-center mt-3 mb-4 pt-3 bg-light w-100 w-sm-90 w-md-75 w-lg-50 mx-auto rounded">
                    <a class="text-decoration-none mb-3" 
                               href="<%= visitorId == posts[i].user._id.toString() ? '/profile' : '/visitProfile/' + posts[i].user._id %>">
                            <img src="<%= posts[i].user && posts[i].user.profilePic ? posts[i].user.profilePic : '/imgs/defaultProfilePic.png' %>" alt="User Avatar" class="user-avatar">
                            <span class="gradient-text"><%= posts[i].user.userName %></span>
                        </a>
                    <a href="/post/<%= posts[i]._id%>">
                        <img class="card-img-top" src="<%= posts[i].image%>" alt="<%= posts[i].title %>">
                    </a>
                    <div class="card-body">
                        <a href="/post/<%= posts[i]._id%>" class="text-decoration-none text-dark"><h5 class="card-title"><%= posts[i].title %></h5></a>
                        <a href="/post/<%= posts[i]._id%>" class="text-decoration-none text-dark"><p class="card-text"><%= posts[i].caption %></p></a>
                    <div class="d-flex justify-content-between align-items-center mb-2">
    
                    <div class="d-flex align-items-center">
                        <a href="/post/<%= posts[i]._id%>">
                        <i class="bi bi-chat-left-text text-secondary me-1"></i>
                        </a>
                        <small class="text-muted me-2"><%= comments.filter(x => x.post.toString() == posts[i]._id.toString()).length %></small>
                    </div>
                
                    <div class="d-flex align-items-center">
                        <a href="/post/<%= posts[i]._id%>">
                        <i class="fa fa-heart text-danger me-1"></i>
                        </a>
                        <small class="text-muted me-2"><%= posts[i].favorites.length %></small>
                    </div>
                    </div>
                    <a href="/post/<%= posts[i]._id%>" class="text-decoration-none"><span class="comment-time"><%= timeSince(posts[i].createdAt) %></span></a>
                    </div>
                </div>
                </a>
            </li>
        <% } %>
    </ul>
</div>