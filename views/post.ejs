  <%- include('partials/header') -%>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="/feed">
                            <i class="bi bi-house-door me-2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">
                            <i class="bi bi-person-circle me-2"></i>
                            Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/profile">
                            <i class="bi bi-journal-text me-2"></i>
                            <%=user.userName+"'s Post" %>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="bi bi-heart-fill me-2"></i>
                            Favorites
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div
            class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2"><%=post.user+"'s Post" %></h1>
            <button id="sidebarToggle" class="btn btn-primary d-md-none">
                    <i class="bi bi-list"></i>
                </button>
        </div>

<div class="row justify-content-center">
  <div class="card row justify-content-center mt-3 pt-3 bg-light" style="max-width:320px">
    <img src="<%= post.image%>" class="card-img-top" alt="Product Image">
    <div class="card-body">
        <h5 class="card-title"><%= post.title %></h5>
        <p class="card-text"><%= post.caption %></p>
        <div class="d-flex justify-content-between align-items-center">
            <span class="h5 mb-0">
              <% if (!post.favorites.includes(user.id)) { %>
          <form
          
          action="/post/favoritePost/<%= post.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
        <% } else { %>
          <form
          
          action="/post/unfavoritePost/<%= post.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart text-danger" type="submit"></button>
        </form>
        <% } %>
            </span>
            <div class="d-flex align-items-center">
              <i class="fa fa-heart text-danger me-1"></i>
                <small class="text-muted me-2"><%= post.favorites.length %></small>
              <%if(post.user == user.id){ %>
                <form
                  action="/post/deletePost/<%= post.id %>?_method=DELETE"
                  method="POST"
                >
                  <button class="btn btn-primary fa fa-trash" type="submit"></button>
                </form>
                <%}%>
            </div>
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between bg-light">
        <a href="/profile"><button class="btn btn-primary btn-sm">Return to Profile</button></a>
        <a href="/feed"><button class="btn btn-primary btn-sm">Return to Feed</button></a>
    </div>
</div>


