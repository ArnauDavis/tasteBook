  <%- include('partials/header') -%>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link <%= page=='/feed' ? 'active' : '' %>" href="/feed">
                            <i class="bi bi-house-door me-2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= page=='/profile' ? 'active' : '' %>" href="/profile">
                            <i class="bi bi-person-circle me-2"></i>
                            Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/visitProfile/<%= post.id %>">
                            <i class="bi bi-journal-text me-2"></i>
                            Visit <%=user+"'s Profile" %>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/favorites">
                            <i class="bi bi-heart-fill me-2"></i>
                            Likes
                        </a>
                    </li>
                    <li class="nav-item mt-5">
                        <a href="/logout" class="btn btn-primary">Logout</a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main content -->


    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div
            class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <a href="/visitProfile/<%= post.id %>" class="text-decoration-none"><h1 class="h2"><%=user+"'s Post" %></h1></a>
            <button id="sidebarToggle" class="btn btn-primary d-md-none">
                    <i class="bi bi-list"></i>
                </button>
        </div>

      <div class="row justify-content-center">
        <div class="card row justify-content-center mt-3 mb-4 pt-3 bg-light w-75 w-sm-50 w-md-25 mx-auto rounded">
          <img src="<%= post.image%>" class="card-img-top img-fluid rounded" alt="Product Image">
          <div class="card-body">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text"><%= post.caption %></p>
              <span class="comment-time"><%= timeSince(post.createdAt) %></span>
              <div class="d-flex justify-content-between align-items-center">
                  <span class="h5 mb-0">
                    <% if (!post.favorites.includes(visitorId)) { %>
                <form
                    
                action="/post/favoritePost/<%= post.id %>?_method=PUT"
                method="POST"
              >
                <button class="btn btn-link text-decoration-none" type="submit"><i class="bi bi-heart"></i></button>
              </form>
              <% } else { %>
                <form

                action="/post/unfavoritePost/<%= post.id %>?_method=PUT"
                method="POST"
              >
                <button class="btn btn-link text-decoration-none text-danger" type="submit"><i class="bi bi-heart-fill"></i></button>
              </form>
              <% } %>
              
                  </span>
                  <div class="d-flex align-items-center">
                    <i class="bi bi-chat-left-text text-secondary me-1"></i>
                      <small class="text-muted me-2"><%= comment.length %></small>
                    <i class="fa fa-heart text-danger me-1"></i>
                      <small class="text-muted me-2"><%= post.favorites.length %></small>
                    <%if(post.user == visitorId){ %>
                      <form
                        action="/post/deletePost/<%= post.id %>?_method=DELETE"
                        method="POST"
                      >
                        <button class="btn btn-link text-danger text-decoration-non" type="submit"><i class="bi bi-trash"></i></button>
                      </form>
                      <%}%>
                  </div>
              </div>
            <!-- New Comment Form -->
            <div class="my-4">
                <div class="d-flex gap-3">
                    <img src="<%= visitorPic%>" alt="User Avatar" class="user-avatar">
                    <div class="flex-grow-1">
                        <form action="/comment/createComment/<%= post._id%>" method="POST">
                            <input type="text" class="form-control comment-input" rows="3" placeholder="Write a comment..." id="comment" name="comment">
                            <div class="mt-3 text-end">
                                <button type="submit" class="btn btn-comment text-white">Post Comment</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Comments -->
            <div class="comments-list">
             <ul>
              <% for(var i=0; i<comment.length; i++) {%>
                <% for(var i=0; i<comment.length; i++) {%>
            <div class="comment-box">
                <div class="d-flex gap-3">
                    <a class="text-decoration-none" href="<%= visitorId == comment[i].user._id ? '/profile' : '/visitProfile/' + comment[i].post._id %>"><img src="<%= comment[i].user.profilePic%>" alt="User Avatar" class="user-avatar"></a>
                    <div class="flex-grow-1">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <a class="text-decoration-none" href="<%= visitorId == comment[i].user._id ? '/profile' : '/visitProfile/' + comment[i].post._id %>"><h6 class="mb-0"><%= comment[i].user.userName%></h6></a>
                            <span class="comment-time"><%= timeSince(comment[i].createdAt) %></span>
                        </div>
                        <p class="mb-2"><%= comment[i].comment%></p>
                        <div class="comment-actions">
                            <!-- <a href="#"><i class="bi bi-heart"></i> Like</a> -->
                             <%if(comment[i].user._id == visitorId || postProfile == visitorId){ %>
                                <form
                                  action="/comment/deleteComment/<%= comment[i]._id %>/<%= post._id %>?_method=DELETE"
                                  method="POST"
                                  class="col-3"
                                >
                                  <button type="submit" class="btn btn-link text-danger p-0 text-decoration-none" title="Delete Comment"><i class="bi bi-trash"></i></button>
                                </form>
                            <%}%>
                            
                        </div>
                    </div>
                </div>
            </div>
            <%}%>
                </li>
            <% } %>
            </ul>
            </div>
          </div>
          <div class="card-footer d-flex justify-content-between bg-light">
              <a href="/profile"><button class="btn btn-primary btn-sm">Return to Profile</button></a>
              <a href="/feed"><button class="btn btn-primary btn-sm">Return to Feed</button></a>
          </div>
      </div>


</main>
    </div>
    </div>

<%- include('partials/footer') -%>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
            const sidebar = document.getElementById('sidebar');
            const sidebarToggle = document.getElementById('sidebarToggle');
            const body = document.body;

            if (window.innerWidth <= 767.98) {
            sidebar.classList.add('sidebar-hidden');
        }

            sidebarToggle.addEventListener('click', function() {
                sidebar.classList.toggle('sidebar-hidden');
            });

            // Close sidebar when clicking outside on mobile
            body.addEventListener('click', function(event) {
                if (window.innerWidth <= 767.98 && !sidebar.contains(event.target) && !sidebarToggle.contains(event.target)) {
                    sidebar.classList.add('sidebar-hidden');
                }
            });

            // Update sidebar visibility on window resize
            window.addEventListener('resize', function() {
                if (window.innerWidth > 767.98) {
                    sidebar.classList.remove('sidebar-hidden');
                }
            });

            // Highlight active nav item
            const navLinks = document.querySelectorAll('.nav-link');
            navLinks.forEach(link => {
                link.addEventListener('click', function() {
                    navLinks.forEach(l => l.classList.remove('active'));
                    this.classList.add('active');
                });
            });
        });
</script>