  <%- include('partials/header') -%>

<div class="container py-3">
    <h2 class="mb-4">User Settings</h2>
    <form action="/editProfile/updateProfile?_method=PUT" enctype="multipart/form-data" method="POST">
        <div class="row mb-4">
            <div class="col-md-6 mx-auto">
                <h4>Change profile pic & or bio</h4>
                <div class="mb-3">
                    <label for="bio" class="form-label">Bio</label>
                    <input type="text" class="form-control" id="bio" name="bio" value="<%=bio%>">
                </div>
                <h4>Profile Picture</h4>
                <div class="mb-3 d-flex flex-column align-items-center">
                    <img src="<%=profilePic%>" alt="Profile Picture" class="mb-2 rounded-circle img-thumbnail profile-thumb mx-auto">
                    <input class="form-control" type="file" name="file" id="profilePicture">
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a href="/profile" class="btn btn-secondary me-md-2">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </div>
        </div>
    </form>
</div>

<%- include('partials/footer') -%>